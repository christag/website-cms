{
  "kind": "collectionType",
  "collectionName": "bio_articles",
  "info": {
    "singularName": "bio-article",
    "pluralName": "bio-articles",
    "displayName": "Bio Article",
    "description": "Simplified bio articles with automated field population"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "publishDate": {
      "type": "date",
      "required": true
    },
    "tags": {
      "type": "text",
      "required": false,
      "description": "Comma-separated tags"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "seoOverride": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo-data",
      "required": false
    },
    "heroOverride": {
      "type": "component",
      "repeatable": false,
      "component": "shared.hero-data",
      "required": false
    }
  }
} 